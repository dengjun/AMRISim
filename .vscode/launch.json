  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) AMRISim --nomap",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/AMRISim",
      "args": ["--nomap"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [ {"name": "AMRISIM", "value": "${workspaceFolder}"} ],
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },

    {
      "name": "AMRISim -map columbia.map",
      "request": "launch",
      "program": "${workspaceFolder}/AMRISim",
      "args": ["-map", "columbia.map"],
      "cwd": "${workspaceFolder}",
      "environment": [ {"name": "AMRISIM", "value": "${workspaceFolder}"} ],
      "externalConsole": false,
    }

  ]
}
